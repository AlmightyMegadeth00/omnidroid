<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          android:versionName="1.0.0"
          package="edu.nyu.cs.omnidroid"
          android:versionCode="1">

    <application android:icon="@drawable/icon" android:label="@string/app_name">
		<!--  Activity that displays currently saved OmniHandlers
		      and allows the user to create/edit/delete them. -->
        <activity android:name=".ui.Overview"
                  android:label="@string/app_name">
            <intent-filter>
            	<!-- Create an application launder from the application menu  -->
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- Associate our application with omnidroid data types  -->
			<!--  We don't need this yet, but we might at one point
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.EDIT" />
                <action android:name="android.intent.action.PICK" />
                <action android:name="android.intent.action.GET_CONTENT" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="vnd.android.cursor.dir/vnd.nyu.omnidroid" />
            </intent-filter>
			-->
		</activity>

		
		<!--  Activity used to by the event catcher to determine
		      what application's actions to catch -->
        <activity android:name=".ui.EventCatcher"
                  android:label="@string/event_catcher_title">
            <intent-filter>
                <action android:name="android.intent.action.EDIT"/>
                <action android:name="android.intent.action.INSERT"/>
            	<category android:name="android.intent.category.DEFAULT"></category>
			</intent-filter>
			<intent-filter>
            	<action android:name="edu.nyu.cs.omnidroid.SELECT"></action>
            	<category android:name="android.intent.category.DEFAULT"></category>
			</intent-filter>
		</activity>

		<!--  Activity used to by the event catcher to determine
		      what actions to catch for a given application -->
        <activity android:name=".ui.EventCatcherActions"
                  android:label="@string/event_catcher_actions_title">
            <intent-filter>
                <action android:name="edu.nyu.cs.omnidroid.eventcatcheractions.SELECT"/>
            	<category android:name="android.intent.category.DEFAULT"></category>                
			</intent-filter>
		</activity>

		<!--  Activity used to by the action thrower to determine
		      what application's actions to throw -->
        <activity android:name=".ui.ActionThrower"
                  android:label="@string/action_thrower_title">
            <intent-filter>
                <action android:name="edu.nyu.cs.omnidroid.actionthrower.SELECT"/>
            	<category android:name="android.intent.category.DEFAULT"></category>                
			</intent-filter>
		</activity>

		<!--  Activity used to by the action thrower to determine
		      what actions to throw for a given application -->
        <activity android:name=".ui.ActionThrowerActions"
                  android:label="@string/action_thrower_actions_title">
            <intent-filter>
                <action android:name="edu.nyu.cs.omnidroid.actionthroweractions.SELECT"/>
            	<category android:name="android.intent.category.DEFAULT"></category>                
			</intent-filter>
		</activity>

		<!-- TODO: This should be launched through having an Enabled
		     item in .ui.Overview instead -->
        <activity android:name=".bkgservice.OmniBR"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

		<!--  TODO: Replace with Catcher/Thrower Services -->	        
		<service android:name=".bkgservice.BRService" />

		<!--  TODO: The service that runs to catch events -->
		<!--
		<service android:name=".bkgservice.CatcherService" />
		 -->

		<!--  TODO: The service that runs to throw actions -->
		<!--
		<service android:name=".bkgservice.ThrowerService" />
		 -->

	</application>

</manifest> 
